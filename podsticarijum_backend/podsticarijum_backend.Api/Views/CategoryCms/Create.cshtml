@model podsticarijum_backend.Application.DTO.CategoryRequestDto;

@{
    ViewData["Title"] = "Category Create";
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

<br />
<div class="row">
    <div class="col-md-6 offset-2">
        <h4>Create a category</h4>
        <br />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NavMenuText" class="control-label"></label>
                <input asp-for="NavMenuText" class="form-control" />
                <span asp-validation-for="NavMenuText" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}