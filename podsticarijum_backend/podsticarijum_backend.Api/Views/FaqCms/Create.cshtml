@model podsticarijum_backend.Api.Viewmodels.FaqViewModel;

@{
    ViewData["Title"] = "Content Create";
}
<div>
    <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
</div>
<br />

<div class="row">
    <div class="col-md-6 offset-2">
        <h4>Create FAQ</h4>
        <br />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">SubCategory</label>
                <select class="form-control" asp-for="@Model.SubCategoryId"
                        asp-items="@Model.SubCategoryDtoList">
                </select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="@Model.Question" class="control-label"></label>
                <input asp-for="@Model.Question" class="form-control" />
                <span asp-validation-for="@Model.Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Answer" class="control-label"></label>
                <input asp-for="@Model.Answer" class="form-control" />
                <span asp-validation-for="@Model.Answer" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}